FROM		ubuntu:18.04

RUN		apt-get -qqy update && DEBIAN_FRONTEND=noninteractive apt-get -qqy install build-essential pkg-config libasound2-dev libsdl2-dev libsndfile1-dev zlib1g-dev curl

ENV		DAPPER_SOURCE /git/superLimitBreak/MednafenMulti/mednafen-server
ENV		DAPPER_OUTPUT .
ENV		DAPPER_DOCKER_SOCKET true
WORKDIR		${DAPPER_SOURCE}

ENTRYPOINT	["make"]
